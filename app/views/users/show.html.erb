<h2><%= @user.name %></h2>
<div container>
<% if @user.created_events.any? %>
	<h3><%= @user.name %> has created <%= pluralize( @user.created_events.count, "event") %></h3>
	<ul>
	<% @created_events.each do |e|%>
		<li><%= e.description %></li>
	<% end %>
	</ul>
<% else %>
	<%= @user.name %> is a freeloader
<% end %>
</div>
<div container>
<% if @user.attended_events.any? %>
	<h3> Mike is or has attended these events:</h3>
	<ul>
	<% @attended_events.each do |a|%>
		<li><%= a.description %></li>
	<% end %>

	</ul>
<% else %>
	<%= @user.name %> needs some more friends
<% end %>
</div>